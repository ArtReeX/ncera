{
  "cfgServer": {
    "port": 8080
  },
  "cfgNetwork": {
    "snapshot": {
      "path": "snapshots",
      "extension": ".snapshot"
    },
    "model": {
      "path": "models",
      "extension": ".train",
      "key": {
        "exchange": "exchange",
        "columns": "columns"
      }
    },
    "pattern": { "input": 10, "output": 1 },
    "brain": {
      "inputSize": 5,
      "hiddenLayers": [20],
      "outputSize": 5,
      "activation": "tanh"
    },
    "training": {
      "iterations": 1000,
      "errorThresh": 0.1,
      "log": true,
      "logPeriod": 5,
      "learningRate": 0.3,
      "momentum": 0.1,
      "callbackPeriod": 10,
      "timeout": null
    }
  },
  "cfgLog": {
    "appenders": {
      "app": { "type": "file", "filename": "./logs/app.txt" },
      "network": { "type": "file", "filename": "./logs/network.txt" },
      "server": { "type": "file", "filename": "./logs/server.txt" },
      "console": { "type": "console" }
    },
    "categories": {
      "app": { "appenders": ["app", "console"], "level": "trace" },
      "network": { "appenders": ["network", "console"], "level": "trace" },
      "server": { "appenders": ["server", "console"], "level": "trace" },
      "another": { "appenders": ["app", "console"], "level": "trace" },
      "default": { "appenders": ["app", "console"], "level": "trace" }
    }
  }
}
